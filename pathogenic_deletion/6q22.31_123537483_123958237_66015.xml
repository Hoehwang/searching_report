        <ClinVarAccession Accession="SCV000087431" DateUpdated="2021-09-19" DateCreated="2013-11-21" Type="SCV" Version="4" SubmitterName="OMIM" OrgID="3" OrganizationCategory="resource" />
        <RecordStatus>current</RecordStatus>
